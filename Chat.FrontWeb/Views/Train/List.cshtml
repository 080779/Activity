@model Chat.DTO.DTO.TrainDTO[]

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <title>全部培训</title>
    <link rel="stylesheet" type="text/css" href="/css/main.css" />
</head>
<body>
    <div class="listbox">
        <ul class="infolist">
            @foreach (var train in Model)
            {
                <li>
                    <a href="/train/details?id=@train.Id">
                        <img src="/images/img.jpg" alt="" />
                        <h2>@train.Title</h2>
                        <p><span>培训时间</span>@train.StartTime ~ @train.EndTime</p>
                        <p><span>培训地点</span>@train.Address</p>
                        <p><span>培训状态</span><font class="green">@train.StatusName</font> <!--<font class="red">已结束</font>--></p>
                    </a>
                </li>
            }     
        </ul>
    </div>
</body>
</html>
    


